<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/dark_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Album Cover -->
        <ImageView
            android:id="@+id/notification_album_cover"
            android:layout_width="60dp"
            android:layout_height="52dp"
            android:src="@drawable/musiclogo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Song Title -->
            <TextView
                android:id="@+id/notification_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <!-- Artist Name -->
            <TextView
                android:id="@+id/notification_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textSize="15sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Playback Controls -->
        <ImageButton
            android:id="@+id/notification_prev_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_previous"
            android:contentDescription="Previous"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/notification_play_pause_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_play"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/notification_next_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_next"
            android:contentDescription="Next"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>
