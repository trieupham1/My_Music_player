<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Album Cover Image -->
        <ImageView
            android:id="@+id/img_album_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Album Cover"
            android:scaleType="centerCrop"
            android:src="@drawable/fein" />

        <!-- Song Title -->
        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="8dp"
            android:text="Song Title - Lorem Ipsum"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/tv_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:text="Artist - Lorem Ipsum"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <!-- Countdown Timer -->
        <TextView
            android:id="@+id/tv_countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Music Stop: 00:00"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <!-- Start/Stop Timer Button -->
        <Button
            android:id="@+id/btn_start_timer"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Sleep timer"
            android:backgroundTint="#FF6200EE"
            android:textColor="#FFFFFF" />

        <!-- Đã chỉnh sửa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <SeekBar
                android:id="@+id/playbackBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="50"
                android:progress="0"
                android:progressDrawable="@drawable/custom_seekbar"
                android:thumb="@drawable/thumb"
                />

            <TextView
                android:id="@+id/tv_total_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Playback Control Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                app:tint="@android:color/white"
                android:layout_marginHorizontal="16dp" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                app:tint="@android:color/white" />
        </LinearLayout>
        


        <!-- Add to Playlist Button -->
        <Button
            android:id="@+id/btn_add_to_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Add to Playlist"
            android:backgroundTint="#FF6200EE"
            android:textColor="#FFFFFF" />

        <!-- Volume Control -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Volume:"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/volumeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:backgroundTint="#FFFFFF" />

        <!-- Playback Speed Control -->
        <TextView
            android:id="@+id/playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Speed: 1x"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/speedBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progressTint="#FFFFFF"
            android:thumbTint="#FFFFFF"
            android:backgroundTint="#FFFFFF" />
    </LinearLayout>
</ScrollView>
