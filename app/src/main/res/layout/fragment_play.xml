<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FF000000">

    <!-- Album Cover Image -->
    <ImageView
        android:id="@+id/img_album_cover"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fein"
        android:contentDescription="Album Cover"
        android:layout_marginBottom="24dp" />

    <!-- Song Title -->
    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="4dp"
        android:text="Song Title - Lorem Ipsum"
        android:textColor="#FFFFFFFF"
        android:textSize="18sp" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist - Lorem Ipsum"
        android:textSize="14sp"
        android:textColor="#FFFFFFFF"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Playback Control Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_previous"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_previous"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btn_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_play"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play/Pause"
            app:tint="@android:color/white"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_next"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next"
            app:tint="@android:color/white" />
    </LinearLayout>

    <!-- Button to Add Song to Playlist -->
    <Button
        android:id="@+id/btn_add_to_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Playlist"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF6200EE"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Volume Control -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Volume:"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"/>
    <SeekBar
        android:id="@+id/volumeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"/>

    <!-- Playback Speed Control -->
    <TextView
        android:id="@+id/playback_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speed: 1x"
        android:textColor="#FFFFFFFF"
        android:textSize="16sp"/>

    <SeekBar
        android:id="@+id/speedBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"/>
</LinearLayout>
